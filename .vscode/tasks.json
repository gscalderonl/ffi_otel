{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build my project",
            "type": "shell",
            "command": "g++ -std=c++11 -o cpp_program src/main.cpp -I .. -I target/cxxbridge/ -L target/debug/ -l ffi_otel -pthread -l dl",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}


